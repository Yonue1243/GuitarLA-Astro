---
import Layout from '../layouts/Layout.astro';
import Post from '../components/Post.astro';
const url = `${import.meta.env.PUBLIC_API_URL}/blogs?populate=imagen`
const respuesta = await fetch(url)
const {data} = await respuesta.json()
---

<Layout title="Blog."	description="pagina de tienda de instrumentos mÃºsicales">
	<main class="contenedor">
		<h1 class="heading">Blog</h1>

		<div class="grid">

			{data?.map(post => (
				<Post 
				Titulo={post.attributes.Titulo}
				Contenido={post.attributes.Contenido}
				publishedAt={post.attributes.publishedAt}
				imagen={post.attributes.imagen.data.attributes.formats.medium.url}
				url={post.attributes.url}
				/>

			))}

		</div>

		
	</main>
</Layout>

